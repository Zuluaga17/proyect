---
const { mode = 'login' } = Astro.props;
const isLogin = mode === 'login';
---

<div class="auth-container">
  <div class="auth-header">
    <h1>{isLogin ? 'Iniciar Sesión' : 'Registrarse'}</h1>
    <p>J&L Arrendamientos</p>
  </div>

  <div id="message" class="message"></div>

  <div class="auth-form">
    <div class="form-group">
      <label>Correo electrónico</label>
      <input type="email" id="email" placeholder="tu@email.com" required>
    </div>

    {!isLogin && (
      <div class="form-group">
        <label>Teléfono</label>
        <input type="tel" id="phone" placeholder="+57 301-404-5224" required>
      </div>
    )}

    <div class="form-group">
      <label>Rol</label>
      <select id="role" required>
        <option value="">Selecciona un rol</option>
        <option value="arrendatario">Arrendatario</option>
        <option value="propietario">Propietario</option>
      </select>
    </div>

    <div class="form-group">
      <label>Contraseña</label>
      <input type="password" id="password" placeholder="••••••••" required>
      {isLogin && (
        <div class="forgot-password">
          <a href="#" id="forgotPasswordLink">¿Olvidaste tu contraseña?</a>
        </div>
      )}
    </div>

    {!isLogin && (
      <div class="form-group">
        <label>Confirmar Contraseña</label>
        <input type="password" id="confirmPassword" placeholder="••••••••" required>
      </div>
    )}

    <button id="submitBtn" class="btn btn-primary">
      {isLogin ? 'Iniciar Sesión' : 'Registrarse'}
    </button>
  </div>

  <div class="divider">
    <span>O continuar con</span>
  </div>

  <div class="social-buttons">
    <button id="googleBtn" class="btn-social">
      <svg viewBox="0 0 24 24" width="20" height="20">
        <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
        <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
        <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
        <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
      </svg>
      Google
    </button>
  </div>

  <div class="toggle-form">
    <a href={isLogin ? '/register' : '/login'}>
      {isLogin ? '¿No tienes cuenta? Regístrate' : '¿Ya tienes cuenta? Inicia sesión'}
    </a>
  </div>
</div>

<script>
import { supabase } from '../lib/supabaseClient'
import { api } from '../services/api.js';

const isLogin = document.querySelector('.auth-header h1')?.textContent === 'Iniciar Sesión'
const email = document.getElementById('email') as HTMLInputElement
const password = document.getElementById('password') as HTMLInputElement
const role = document.getElementById('role') as HTMLSelectElement
const submitBtn = document.getElementById('submitBtn') as HTMLButtonElement
const messageDiv = document.getElementById('message') as HTMLDivElement

const phone = document.getElementById('phone') as HTMLInputElement
const confirmPassword = document.getElementById('confirmPassword') as HTMLInputElement

function showMessage(text: string, type: 'error' | 'success') {
  messageDiv.textContent = text
  messageDiv.className = `message ${type}`
  messageDiv.style.display = 'block'
  setTimeout(() => messageDiv.style.display = 'none', 5000)
}

function setLoading(loading: boolean) {
  submitBtn.disabled = loading
  submitBtn.textContent = loading ? 'Cargando...' : (isLogin ? 'Iniciar Sesión' : 'Registrarse')
}

function getRedirectUrl(userRole: string): string {
  if (userRole === 'arrendatario') {
    return '/dashboard-arrendatario'
  } else if (userRole === 'propietario') {
    return '/dashboard-propietario'
  }
  return '/dashboard'
}

submitBtn.addEventListener('click', async () => {
  const emailValue = email.value.trim()
  const passwordValue = password.value
  const roleValue = role.value

  if (!emailValue || !passwordValue || !roleValue) {
    showMessage('Completa todos los campos', 'error')
    return
  }

  // Validaciones adicionales para registro
  if (!isLogin) {
    const phoneValue = phone?.value.trim()
    const confirmPasswordValue = confirmPassword?.value

    if (!phoneValue || !confirmPasswordValue) {
      showMessage('Completa todos los campos', 'error')
      return
    }

    if (passwordValue !== confirmPasswordValue) {
      showMessage('Las contraseñas no coinciden', 'error')
      return
    }

    if (passwordValue.length < 6) {
      showMessage('La contraseña debe tener al menos 6 caracteres', 'error')
      return
    }
  }

  setLoading(true)

  try {
    if (isLogin) {
      // Iniciar sesión
      const data = await api.login({
        email: emailValue,
        password: passwordValue,
        role: roleValue
      })

      showMessage('¡Bienvenido!', 'success')
      
      setTimeout(() => {
        window.location.href = getRedirectUrl(data.user.role)
      }, 1500)
      
    } else {
      // Registrarse
      await api.register({
        email: emailValue,
        password: passwordValue,
        phone: phone.value.trim(),
        role: roleValue
      })

      showMessage('¡Registro exitoso! Revisa tu correo.', 'success')

      setTimeout(() => {
        window.location.href = '/login'
      }, 2000)
    }
  } catch (error: any) {
    showMessage(error.message || 'Error en la operación', 'error')
  } finally {
    setLoading(false)
  }
})

// Google Sign In - Por ahora comentado, se puede implementar después
document.getElementById('googleBtn')?.addEventListener('click', async () => {
  showMessage('Google Sign-In - Próximamente', 'error')
  // Esto requeriría OAuth flow con el backend
})

password.addEventListener('keypress', (e) => {
  if (e.key === 'Enter' && isLogin) submitBtn.click()
})

confirmPassword?.addEventListener('keypress', (e) => {
  if (e.key === 'Enter' && !isLogin) submitBtn.click()
})

// Manejar "Olvidé mi contraseña"
document.getElementById('forgotPasswordLink')?.addEventListener('click', async (e) => {
  e.preventDefault()

  const emailValue = email.value.trim()

  if (!emailValue) {
    showMessage('Por favor, ingresa tu correo electrónico', 'error')
    email.focus()
    return
  }

  const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/
  if (!emailRegex.test(emailValue)) {
    showMessage('Por favor, ingresa un correo electrónico válido', 'error')
    return
  }

  setLoading(true)

  try {
    await api.resetPassword(emailValue)
    showMessage('Se ha enviado un enlace de recuperación a tu correo', 'success')
  } catch (error: any) {
    showMessage(error.message || 'Error al enviar correo', 'error')
  } finally {
    setLoading(false)
  }
})
  
</script>

<style>

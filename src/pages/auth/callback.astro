---
// src/pages/auth/callback.astro
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Procesando...</title>
  
  <!-- Cargar reCAPTCHA v2 -->
  <script src="https://www.google.com/recaptcha/api.js" async defer></script>
  
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .loading-container {
      text-align: center;
      background: white;
      padding: 40px;
      border-radius: 20px;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    }

    .spinner {
      width: 50px;
      height: 50px;
      border: 4px solid #f3f3f3;
      border-top: 4px solid #008000;
      border-radius: 50%;
      animation: spin 1s linear infinite;
      margin: 0 auto 20px;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    h2 {
      color: #333;
      margin-bottom: 10px;
    }

    p {
      color: #666;
      font-size: 14px;
    }

    .verification-container {
      text-align: center;
      background: white;
      padding: 40px;
      border-radius: 20px;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
      max-width: 450px;
    }

    .verification-icon {
      font-size: 48px;
      margin-bottom: 20px;
    }

    .verification-title {
      color: #333;
      font-size: 24px;
      margin-bottom: 10px;
    }

    .verification-message {
      color: #666;
      margin-bottom: 30px;
      line-height: 1.6;
    }

    .recaptcha-wrapper {
      display: flex;
      justify-content: center;
      margin-bottom: 20px;
    }

    .error-container {
      text-align: center;
      background: white;
      padding: 40px;
      border-radius: 20px;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
      max-width: 450px;
    }

    .error-icon {
      font-size: 48px;
      color: #c33;
      margin-bottom: 20px;
    }

    .error-title {
      color: #c33;
      font-size: 24px;
      margin-bottom: 10px;
    }

    .error-message {
      color: #666;
      margin-bottom: 20px;
      line-height: 1.6;
    }

    .btn-back {
      display: inline-block;
      background: #008000;
      color: white;
      padding: 12px 24px;
      border-radius: 10px;
      text-decoration: none;
      font-weight: 600;
      transition: all 0.3s ease;
      border: none;
      cursor: pointer;
      font-size: 16px;
    }

    .btn-back:hover {
      background: #006600;
      transform: translateY(-2px);
    }

    .btn-verify {
      background: #008000;
      color: white;
      padding: 14px 32px;
      border-radius: 10px;
      font-weight: 600;
      transition: all 0.3s ease;
      border: none;
      cursor: pointer;
      font-size: 16px;
    }

    .btn-verify:hover:not(:disabled) {
      background: #006600;
      transform: translateY(-2px);
    }

    .btn-verify:disabled {
      background: #ccc;
      cursor: not-allowed;
    }

    .hidden {
      display: none;
    }
  </style>
</head>
<body>
  <div class="loading-container" id="loadingContainer">
    <div class="spinner"></div>
    <h2>Procesando autenticaci贸n...</h2>
    <p>Ser谩s redirigido en un momento</p>
  </div>

  <div class="verification-container hidden" id="verificationContainer">
    <div class="verification-icon"></div>
    <h2 class="verification-title">Verificaci贸n de seguridad</h2>
    <p class="verification-message">Por favor, completa la verificaci贸n para continuar</p>
    
    <div class="recaptcha-wrapper">
      <div class="g-recaptcha" data-sitekey="6LcEugMsAAAAAGFFnT9E-9poiD4leptIinnJpiaT" data-callback="onRecaptchaSuccess"></div>
    </div>
    
    <button class="btn-verify" id="btnVerify" disabled>Continuar</button>
  </div>

  <div class="error-container hidden" id="errorContainer">
    <div class="error-icon">锔</div>
    <h2 class="error-title">Error de autenticaci贸n</h2>
    <p class="error-message" id="errorMessage"></p>
    <button class="btn-back" onclick="window.location.href='/login'">Volver al inicio de sesi贸n</button>
  </div>

  <script type="module">
    import { supabase } from '/src/lib/supabaseClient.js';

    let recaptchaToken = null;
    let userAuthenticated = false;

    function showError(message) {
      const loadingContainer = document.getElementById('loadingContainer');
      const verificationContainer = document.getElementById('verificationContainer');
      const errorContainer = document.getElementById('errorContainer');
      const errorMessage = document.getElementById('errorMessage');
      
      if (loadingContainer) loadingContainer.classList.add('hidden');
      if (verificationContainer) verificationContainer.classList.add('hidden');
      if (errorContainer) errorContainer.classList.remove('hidden');
      if (errorMessage) errorMessage.textContent = message;
    }

    function showVerification() {
      const loadingContainer = document.getElementById('loadingContainer');
      const verificationContainer = document.getElementById('verificationContainer');
      
      if (loadingContainer) loadingContainer.classList.add('hidden');
      if (verificationContainer) verificationContainer.classList.remove('hidden');
    }

    // Callback cuando reCAPTCHA se completa
    window.onRecaptchaSuccess = function(token) {
      console.log('reCAPTCHA completado');
      recaptchaToken = token;
      document.getElementById('btnVerify').disabled = false;
    };

    async function verifyRecaptcha(token) {
      try {
        const response = await fetch('/api/verify-recaptcha', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ token })
        });

        const data = await response.json();
        
        if (!data.success) {
          console.error('reCAPTCHA verificaci贸n fallida');
          return false;
        }

        console.log('reCAPTCHA verificado exitosamente');
        return true;
      } catch (error) {
        console.error('Error en verificaci贸n reCAPTCHA:', error);
        return false;
      }
    }

    async function checkAuthentication() {
      console.log('Verificando autenticaci贸n inicial...');
      
      try {
        const { data: { user }, error: userError } = await supabase.auth.getUser();

        if (userError || !user) {
          console.error('No hay usuario autenticado');
          showError('No se pudo autenticar. Por favor, intenta nuevamente.');
          setTimeout(() => window.location.href = '/login', 3000);
          return;
        }

        console.log('Usuario autenticado:', user.email);
        userAuthenticated = true;
        
        // Mostrar verificaci贸n reCAPTCHA
        showVerification();
        
      } catch (error) {
        console.error('Error verificando autenticaci贸n:', error);
        showError('Ocurri贸 un error inesperado. Por favor, intenta nuevamente.');
        setTimeout(() => window.location.href = '/login', 3000);
      }
    }

    async function processCallback() {
      console.log('Procesando callback con reCAPTCHA...');
      
      if (!recaptchaToken) {
        showError('Por favor, completa la verificaci贸n reCAPTCHA.');
        return;
      }

      // Mostrar loading
      const verificationContainer = document.getElementById('verificationContainer');
      const loadingContainer = document.getElementById('loadingContainer');
      if (verificationContainer) verificationContainer.classList.add('hidden');
      if (loadingContainer) loadingContainer.classList.remove('hidden');

      try {
        // Verificar reCAPTCHA en el servidor
        const recaptchaValid = await verifyRecaptcha(recaptchaToken);
        if (!recaptchaValid) {
          showError('Verificaci贸n de seguridad fallida. Por favor, intenta nuevamente.');
          setTimeout(() => window.location.href = '/login', 3000);
          return;
        }

        // Obtener el rol que seleccion贸 ANTES de hacer clic en Google
        const pendingRole = localStorage.getItem('pendingRole');
        console.log('Rol pendiente en localStorage:', pendingRole);
        
        // Obtener el usuario actual
        const { data: { user }, error: userError } = await supabase.auth.getUser();

        if (userError || !user) {
          showError('No se pudo obtener la informaci贸n del usuario.');
          setTimeout(() => window.location.href = '/login', 3000);
          return;
        }

        // Verificar si ya tiene un perfil en la base de datos
        const { data: profile, error: profileError } = await supabase
          .from('profiles')
          .select('role')
          .eq('id', user.id)
          .single();

        console.log('Perfil obtenido:', profile);

        let finalRole = null;

        if (profile?.role) {
          // Usuario ya registrado - validar rol
          finalRole = profile.role;
          console.log('Usuario existente con rol:', finalRole);
          
          if (pendingRole && pendingRole !== finalRole) {
            await supabase.auth.signOut();
            localStorage.removeItem('pendingRole');
            showError(`Este usuario est谩 registrado como ${finalRole}. Por favor, selecciona el rol "${finalRole}" e intenta nuevamente.`);
            return;
          }
          
        } else {
          // Usuario nuevo - crear perfil
          if (!pendingRole) {
            await supabase.auth.signOut();
            showError('Por favor, selecciona un rol antes de iniciar sesi贸n con Google.');
            setTimeout(() => window.location.href = '/login', 3000);
            return;
          }

          finalRole = pendingRole;
          
          // Actualizar metadata
          await supabase.auth.updateUser({
            data: { 
              role: pendingRole,
              phone: user.user_metadata?.phone || ''
            }
          });

          // Insertar en tabla profiles
          const { error: insertError } = await supabase
            .from('profiles')
            .insert({
              id: user.id,
              email: user.email,
              phone: user.user_metadata?.phone || '',
              role: pendingRole
            });
          
          if (insertError && !insertError.message.includes('duplicate key')) {
            console.error('Error al crear perfil:', insertError);
          }
        }

        // Limpiar localStorage
        localStorage.removeItem('pendingRole');

        // Redirigir seg煤n el rol
        console.log('Redirigiendo a dashboard para rol:', finalRole);
        
        if (finalRole === 'arrendatario') {
          window.location.href = '/dashboard-arrendatario';
        } else if (finalRole === 'propietario') {
          window.location.href = '/dashboard-propietario';
        } else {
          window.location.href = '/dashboard';
        }
        
      } catch (error) {
        console.error('Error en callback:', error);
        showError('Ocurri贸 un error inesperado. Por favor, intenta nuevamente.');
        setTimeout(() => window.location.href = '/login', 3000);
      }
    }

    // Event listener para el bot贸n de verificar
    document.getElementById('btnVerify').addEventListener('click', processCallback);

    // Iniciar verificaci贸n de autenticaci贸n
    checkAuthentication();
  </script>
</body>
</html>
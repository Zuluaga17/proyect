  // Funci√≥n para formatear precio
  function formatPrice(price: number): string {
    return new Intl.NumberFormat('es-CO', {
      style: 'currency',
      currency: 'COP',
      minimumFractionDigits: 0
    }).format(price)
  }

  // Funci√≥n para renderizar propiedades
  function renderProperties(properties: typeof propertiesData) {
    const grid = document.getElementById('propertiesGrid')
    const count = document.getElementById('propertiesCount')
    
    if (!grid || !count) return

    count.textContent = `${properties.length} propiedad${properties.length !== 1 ? 'es' : ''}`

    if (properties.length === 0) {
      grid.innerHTML = '<p class="empty-state">No se encontraron propiedades con estos filtros</p>'
      return
    }

    grid.innerHTML = properties.map(property => `
      <div class="property-card" data-id="${property.id}">
        <div class="property-image">
          <img src="${property.image}" alt="${property.title}">
          <button class="btn-favorite" data-id="${property.id}">
            <span class="heart-icon">ü§ç</span>
